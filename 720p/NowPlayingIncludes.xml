<?xml version="1.0"?>
<includes>
	<include name="NowPlayingCurrentCover">
		<control type="group">
			<description>Current cover</description>
			<visible>Player.HasMusicPlaylist</visible>
			<control type="image">
				<width>393</width>
				<height>393</height>
								<texture diffuse="thumb_np_mask.png">$INFO[MusicPlayer.Cover]</texture>
			<aspectratio aligny="bottom" align="center" scalediffuse="false">keep</aspectratio>
			</control>
			<control type="image">
				<posy>394</posy>
				<width>393</width>
				<height>393</height>
								<texture diffuse="thumb_np_fade.png" flipy="true">$INFO[MusicPlayer.Cover]</texture>
			<aspectratio aligny="bottom" align="center" scalediffuse="false">keep</aspectratio>
			</control>
			<control type="image">
				<posx>-35</posx>
				<width>461</width>
				<height>401</height>
								<texture>thumb_np_overlay.png</texture>
			<aspectratio aligny="bottom" align="center" scalediffuse="false">keep</aspectratio>
			</control>
		</control>
	</include>
	<include name="NowPlayingCurrentInfo">
		<control type="group">
			<description>Current track info</description>
			<control type="label">
				<posx>500</posx>
				<width>500</width>
				<font>tracktitle</font>
				<textcolor>Orange</textcolor>
				<shadowcolor>Shadow</shadowcolor>
				<label>$INFO[MusicPlayer.Title]</label>
				<align>right</align>
			</control>
			<control type="label">
				<posx>500</posx>
				<posy>40</posy>
				<width>500</width>
				<font>trackartist</font>
				<textcolor>White</textcolor>
				<shadowcolor>Shadow</shadowcolor>
				<label>$INFO[MusicPlayer.Artist]</label>
				<align>right</align>
			</control>
			<control type="label">
				<posx>500</posx>
				<posy>75</posy>
				<width>500</width>
				<font>trackalbum</font>
				<textcolor>Gray</textcolor>
				<shadowcolor>Shadow</shadowcolor>
				<label>$INFO[MusicPlayer.Album]</label>
				<align>right</align>
			</control>
			<control type="label">
				<posx>500</posx>
				<posy>108</posy>
				<width>500</width>
				<font>info2</font>
				<textcolor>DarkGray</textcolor>
				<shadowcolor>Shadow</shadowcolor>
				<label>$INFO[MusicPlayer.PlaylistPosition] of $INFO[MusicPlayer.PlaylistLength]</label>
				<align>right</align>
			</control>
		</control>
	</include>
